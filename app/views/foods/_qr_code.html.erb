<% if qr_code.present? %>
  <table id="qr_code">
    <% qr_code.modules.each_index do |x| %>
      <tr>  
      <% qr_code.modules.each_index do |y| %>
       <% if qr_code.dark?(x,y) %>
        <td class="black"/>
       <% else %>
        <td class="white"/>
       <% end %>
      <% end %>
      </tr>
    <% end %>
  </table>
<% end %>